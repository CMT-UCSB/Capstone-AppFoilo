<%= form_with(model: @survey, url: surveys_create_path) do |f| %>  
    <%= f.fields_for :questions do |q| %>
        Prompt: <%= q.text_field :prompt %>
        <br />
        <br />
        Type: <%= select_tag(:type, options_for_select([['Mood', 1]], 1)) %>
        <br />
        <br />
    <% end %>
    <b>Remind employees every:</b><br />
    <%= f.radio_button :day_of_week, 1, :checked => true %>Monday<br />
    <%= f.radio_button :day_of_week, 2 %>Tuesday<br />
    <%= f.radio_button :day_of_week, 3 %>Wednesday<br />
    <%= f.radio_button :day_of_week, 4 %>Thursday<br />
    <%= f.radio_button :day_of_week, 5 %>Friday<br />
    <%= f.radio_button :day_of_week, 6 %>Saturday<br />
    <%= f.radio_button :day_of_week, 7 %>Sunday<br />
    <br />
    <%= f.time_select :time_of_day, {ampm: true, minute_step: 5, default: Time.now} %>
    <br />
    <br />
    <b>Is this survey Identifiable or Anonymous?</b><br />
    <%= f.select :isAnonymous, options_for_select([['Identifiable', false], ['Anonymous', true]], false) %>
    <br />
    <br />
    <%= f.submit %>
<% end %>
  