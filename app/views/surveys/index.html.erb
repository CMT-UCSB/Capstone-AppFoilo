<%= render :partial => "account_header/header" %>
<%= include_gon(:init => true) %>

<div class="container">
  <p id="notice"><%= notice %></p>
  <p class='alert'><%= alert %></p>

  <h1 style="text-align: center;">Surveys</h1><br>
    <div class= "survey-container">
      <%= link_to "Create New Survey", new_survey_path, class: "btn", style: "color: black" %>
      <br />
      <br />
      <% if !@surveys.empty? %>
        <% @surveys.each_with_index do |survey, index| %>
        <div class="one-survey">
        <tr>
          <b><td>Name: <%= survey.name %></td></b><br>
          <td>Notifications sent every <%= survey.day_of_weeks.to_human.join(", ") %> @ <%= survey.time_of_day.strftime("%I:%M %p") %></td><br>
          <td>Visibility: <%= survey.isAnonymous.capitalize %></td><br>
          <td>Created on <%= survey.created_at.strftime("%b %d") %> at <%= survey.created_at.strftime("%I:%M %p") %> UTC</td><br>
          <td>
            Questions:
            <ol>
              <% survey.questions.each do |q| %>
                  <li><%= q.prompt %> (<%= q.question_type.dasherize.capitalize %>)</li>
              <% end %>
            </ol>
          </td>
          <%= link_to "Display", survey, class: "smallBtn", style: "color: black" %>
          <%= link_to "Edit", edit_survey_path(survey), class: "smallBtn", style: "color: black" %>
          <%= link_to "Destroy", survey, method: :delete, data: { confirm: "Are you sure?" }, class: "smallBtn", style: "color: black" %>
          <br />
          <br />

          <%= link_to "Send Reminders", pages_send_emails_path(id: survey), method: :send_emails, class: "smallBtn" %>
          <a name="show_result" data-survey-id="<%= survey.id %>" class="smallBtn js-show-results">Show Results</a>
          <br><br>
        </tr>
        </div>
        <% end %>
      <% else %>
        <tr>You don't have any surveys yet!</tr>
      <% end %>
    </div>
  

  <br />
</div>

<div id="showResultModal" class="modal">
  <div class="modal-content">
    <span class="close_sr"> &times;</span>
    <h2 style="text-align: center">Survey Results:</h2>
    <div class="modal-body">
    </div>
  </div>
</div>

<% @surveys.each do |survey| %>
  <div style="display: none; text-align: center;" class="survey-results-<%= survey.id %>">
    <% Question.where(survey_id: survey.id).each do |question| %>
      <div class="question_container" style="display: show;">
        <%= column_chart OpenEndedResponseChartBuilder.new(question: question).pie_chart_data, defer: true, discret: true  %>
        <b style="font-size: 30px;"><%= question.prompt %> </b> <br/>
        <div class="response_table">
          <table class="question">

            <thead>
              <tr>
                <% if survey.isAnonymous === "identifiable" %>
                  <th> Name </th>
                <% end %>
                <th> Sentiment </th>
                <th> Response </th>
                <th> Score </th>
                <th> Magnitude </th>
              </tr>
            </thead>

            <tbody>
              <% OpenEndedResponse.where(question_id: question.id).each do |response| %>
                <tr>
                  <% if survey.isAnonymous === "identifiable" %>
                    <% employee = Employee.where(id: response.employee_id).first %>
                    <td> <%= employee.first_name %> <%= employee.last_name %> </td>
                  <% end %>
                  <% if response.sentiment === "slightly_positive" or response.sentiment === "positive" %>
                    <td style="color: green;"> <%= response.sentiment %> </td>
                  <% elsif response.sentiment === "slightly_negative" or response.sentiment === "negative" %>
                    <td style="color: red;"> <%= response.sentiment %> </td>
                  <% elsif response.sentiment === "mixed" %>
                    <td style="color: #808080"> <%= response.sentiment %> </td>
                  <% else %>
                    <td> <%= response.sentiment %> </td>
                  <% end %>
                  <td> <%= response.response %> </td>
                  <td> <%= response.score %> </td>
                  <td> <%= response.magnitude %> </td>
                </tr>
              <% end %>
            </tbody>

          </table>
        </div>
      </div>
      <br/>
      <br/>
      
    <% end %>
  </div>
<% end %>

