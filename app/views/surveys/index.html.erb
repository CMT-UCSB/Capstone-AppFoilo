  }

  .surveys-dashboard{
    background: #262728;
    padding-top: 10px;
    width: 1080px;
    margin: 0 auto;
  }

  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    padding-top: 100px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0, 0, 0);
    background-color: rgba(0, 0, 0, 0.4);
  }

  .modal-content {
    position: relative;
    background-color: #fefefe;
    margin: auto;
    padding: 0;
    border: 1px solid #888;
    width: 20%;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    -webkit-animation-name: animatetop;
    -webkit-animation-duration: 0.4s;
    animation-name: animatetop;
    animation-duration: 0.4s;
  }

  .modal-body {
    padding: 5%;
  }

  /* commented this because this made the Sign Out text color white
  a:visited {
    color: rgb(255, 255, 255);
  } */

  @-webkit-keyframes animatetop {
    from {
      top: -300px;
      opacity: 0;
    }
    to {
      top: 0;
      opacity: 1;
    }
  }

  @keyframes animatetop {
    from {
      top: -300px;
      opacity: 0;
    }
    to {
      top: 0;
      opacity: 1;
    }
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
</style>

<%= render :partial => 'account_header/header' %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h1 style="text-align: center;">Surveys</h1><br>
    <div class= "survey-container">
      <%= link_to 'New Survey', new_survey_path, class: "btn", style: "color: black" %>
      <br />
      <br />
      <% if !@surveys.empty? %>
        <% @surveys.each do |survey| %>
        <tr>
          <b><td>Name: <%= survey.name %></td></b><br>
          <td>Notifications sent every <%= survey.day_of_week.capitalize %> @ <%= survey.time_of_day.strftime("%I:%M %p") %></td><br>
          <td>Visibility: <%= survey.isAnonymous.capitalize %></td><br>
          <td>Created on <%= survey.created_at.strftime("%b %d") %> at <%= survey.created_at.strftime("%I:%M %p") %> UTC</td><br>
          <td>
            Questions:
            <ol>
              <% survey.questions.each do |q| %>
                  <li><%= q.prompt %> (<%= q.question_type.dasherize.capitalize %>)</li>
              <% end %>
            </ol>
          </td>
          <%= link_to 'Display', survey, class: "smallBtn", style: "color: black" %>
          <%= link_to 'Edit', edit_survey_path(survey), class: "smallBtn", style: "color: black" %>
          <%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' }, class: "smallBtn", style: "color: black" %>
          <br />
          <br />
          <%= button_to 'Send Reminders', pages_send_emails_path(id: survey), method: :send_emails %>
          <br><br>
        </tr>
        <% end %>
      <% else %>
        <tr>You don't have any surveys yet!</tr>
      <% end %>
    </div>
