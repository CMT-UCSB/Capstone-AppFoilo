<div class="container">
  <!--Surveys-->
  <%# <div class="surveys-dashboard"> %>
    <h1 style="text-align: center;">Surveys</h1><br>
    <!--button id="create_survey" style="margin-left: 20px; text-align: center; align-items: center;">Create New Survey</button><br><br-->
    <div class= "survey-container">
      <button id="create_survey"  class="linechart-btn">Create New Survey</button><br><br>
      <% if !@surveys.empty? %>
        <% @surveys.each_with_index do |s, index| %>
        <tr>
          <b><td>Name: <%= s.name %></td></b><br>
          <td>Notifications sent every <%= s.day_of_week.capitalize %> @ <%= s.time_of_day.strftime("%I:%M %p") %></td><br>
          <td>Visibility: <%= s.isAnonymous.capitalize %></td><br>
          <td>Created on <%= s.created_at.strftime("%b %d") %> at <%= s.created_at.strftime("%I:%M %p") %> UTC</td><br>
          <td>
            Questions:
            <ol>
              <% s.questions.each do |q| %>
                  <li><%= q.prompt %> (<%= q.question_type.dasherize.capitalize %>)</li>
              <% end %>
            </ol>
          </td>
          <div class="survey_tab_buttons">
            <%= button_to('Send Reminders', pages_send_emails_path(id: s), method: :send_emails, :class => "survey-index-btn")%>
            <button name="show_result" onclick="show_survey_result(<%=index%>)" data-myvalue="<%=s.id%>" class="survey-index-btn">Show Results</button>
          </div>
          <br><br>
        </tr>
        <% end %>
      <% else %>
        <tr>You don't have any surveys yet!</tr>
      <% end %>
    </div>
</div>

<div id="createSurveyModal" class="modal">
  <div class="modal-content">
    <span class="close"> &times;</span>
    <h2 style="text-align: center">Enter Survey Details:</h2>
    <div class="modal-body">
      <%= render 'surveys/form' %>
    </div>
  </div>
</div>

<div id="showResultModal" class="modal">
  <div class="modal-content">
    <span class="close_sr"> &times;</span>
    <h2 style="text-align: center">Survey Results:</h2>
    <div class="modal-body">
      <% if !@surveys.empty? %>
        <span id="question1prompt"></span>
      <% else %>

      <% end %>
    </div>
  </div>
</div>

