<style>
body {
  background: white;
}

.container {
  margin-top: 50px;
  margin-bottom: 50px;
  display: flex;
  align-items: center;
  flex-direction: column;
  max-width: 800px;
  justify-content: center;
}

h1, tr, th, p {
  color: black;
}

.employee {
  width: 100%;
}

.employee td, .employee th {
  padding: 10px;
}

.smallBtn {
  border-radius: 30px;
  background: white;
  white-space: nowrap;
  color: black;
  padding: 5px 15px;
  font-size: 16px;
  outline: none;
  border: none;
  cursor: pointer;
}
</style>

<%= render :partial => "account_header/header" %>

<div class="container card bg-light mb-3">
  <p id="notice"><%= notice %></p>

  <h1>Employees</h1>

  <table class="employee">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Slack ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.first_name %></td>
          <td><%= employee.last_name %></td>
          <td><%= employee.email %></td>
          <td><%= employee.slack_id %></td>
          <td><%= link_to "Display", employee, class: "btn btn-success" %></td>
          <td><%= link_to "Edit", edit_employee_path(employee), class: "btn btn-info" %></td>
          <td><%= link_to "Destroy", employee, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "New Employee", new_employee_path, class: "btn btn-primary" %>

  <br />
</div>
