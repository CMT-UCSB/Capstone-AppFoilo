
<style>
.container{
  background: var(--gray);
  display: flex;
  align-items: center;
  flex-direction: column;
  position: absolute;
  max-width: 450px;
  right: 42%;
  top: 15%;
  justify-content: center;
}

h1, h2, h3, h4, h5, h6, p {
  color: white;
}

.button {
  border-radius: 50px;
  background: white;
  white-space: nowrap;
  color: black;
  padding: 10px 22px;
  font-size: 16px;
  outline: none;
  border: none;
  cursor: pointer;
}

body {
  background: black;
}

</style>


<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource, :style => "color: white;"%>

    <div class="field">
      <%= f.label :email, :style => "color: white;" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, :style => "color: white;" %>
      <% if @minimum_password_length %>
      <em style="color: white;">(<%= @minimum_password_length %> characters minimum) </em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, :style => "color: white;" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <br />
    <div class="actions">
      <%= f.submit "Sign up", :class => "button" %>
    </div>
  <% end %>

  <br />
  <%= link_to "Already registered?", new_session_path(resource_name), :style => "color: white;" %><br />
</div>
