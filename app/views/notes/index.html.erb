<style>
body {
  background: black;
}

.container {
  margin-top: 50px;
  margin-bottom: 50px;
  background: #262728;
  display: flex;
  align-items: center;
  flex-direction: column;
  max-width: 800px;
  justify-content: center;
}

h1, tr, th, p {
  color: white;
}

.note {
  width: 100%;
}

.note td, .note th {
  padding: 10px;
}


.smallBtn {
  border-radius: 30px;
  background: white;
  white-space: nowrap;
  color: black;
  padding: 5px 15px;
  font-size: 16px;
  outline: none;
  border: none;
  cursor: pointer;
}
</style>

<%= render partial: 'account_header/header' %>

<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Notes</h1>

  <table class="note">
    <thead>
      <tr>
        <th>Date</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @notes.each do |note| %>
        <tr>
          <td><%= note.date %></td>
          <td><%= note.content %></td>
          <td><%= link_to 'Display', note, class: "smallBtn", style: "color: black" %></td>
          <td><%= link_to 'Edit', edit_note_path(note), class: "smallBtn", style: "color: black" %></td>
          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class: "smallBtn", style: "color: black" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Note', new_note_path, style: "color: black;", class: "btn" %>
  <br />
</div>
