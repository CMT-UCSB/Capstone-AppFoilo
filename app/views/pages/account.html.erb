<!--Anayltics -->
<div class="analytics-container">
  <div class="piechart">
    <h4>Analytics</h4>
    <br />
    <select id="week" onchange="changeAnalytics()">
      <option value="9/28/20-10/4/20">Week of 9/28/20-10/4/20</option>
      <option value="10/5/20-10/11/20">Week of 10/5/20-10/11/20</option>
      <option value="10/12/20-10/18/20">Week of 10/12/20-10/18/20</option>
      <option value="10/19/20-10/25/20">Week of 10/19/20-10/25/20</option>
      <option selected="selected" value="10/26/20-11/1/20">Week of 10/26/20-11/1/20</option>
    </select>
    <br />
    <p id="analytics_data">Showing data for week of 10/26/20-11/1/20</p>
    <br />
    <div class="chart">
    <% @surveys.each do |mood_response| %>
      <%= render partial: 'chart', locals: { chart: mood_response } %>
    <% end %>
    </div>
  </div>

  <%# Line plot %>
  <div class="linechart">
    <h4>Mood Tracker</h4>
    <br />
    <div id="display2" class="chart">
      <canvas width="1162" height="375" class="chartjs-render-monitor" style="display: block; height: 300px; width: 930px;">
    </div>
    <script>
      new Chartkick.LineChart(document.getElementById("display2"), [["12/3",2.7],["12/4",2.9],["12/7",2.3],["12/8",2.5],["12/9",2.4]], {});
    </script>
    <div class="linechart-buttons">
      <button class="linechart-btn">Past Year</button>
      <button class="linechart-btn">Past 3 months</button>
      <button class="linechart-btn">Past month</button>
      <button class="linechart-btn">Past week</button>
    </div>
    <br /><br />
  </div>
</div>

