<div class="analytics-container">
  <div class="piechart">
    <h4>Analytics</h4>
    <br />
    <select id="number" onchange="changeAnalytics()">
      <option value="current">Current Mood Survey</option>
      <option value="recent">Recent Mood Survey</option>
      <option value="older">Older Mood Survey</option>
      <option selected="selected" value="first">First Mood Survey</option>
    </select>
    <br />
    <p id="analytics_data">Showing data for the first survey</p>
    <br />
    <div class="chart">
    <% if !@surveys.empty? %>
      <%= render partial: 'chart', locals: { chart: @surveys.first } %>
    <% end %>
    </div>
  </div>

  <%# Line plot %>
  <div class="linechart">
    <h4>Mood Tracker</h4>
    <br />
    <div id="display2" class="chart">
      <canvas width="1162" height="375" class="chartjs-render-monitor" style="display: block; height: 300px; width: 930px;">
    </div>
    <script>
      new Chartkick.LineChart(document.getElementById("display2"), [["12/3",2.7],["12/4",2.9],["12/7",2.3],["12/8",2.5],["12/9",2.4]], {});
    </script>
    <div class="linechart-buttons">
      <button class="linechart-btn" onclick="changeTimeIntervalY()">Past Year</button>
      <button class="linechart-btn" onclick="changeTimeInterval3M()">Past 3 months</button>
      <button class="linechart-btn" onclick="changeTimeIntervalM()">Past month</button>
      <button class="linechart-btn" onclick="changeTimeIntervalW()">Past week</button>
    </div>
    <br /><br />
  </div>
</div>

